<h1>Editing job</h1>

<%= form_for :job, url: job_path(@job), method: :patch do |f| %>

  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@job.errors.count, "error") %> prohibited
        this job from being saved:
      </h2>
      <ul>
        <% @job.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :hour_rate %><br>
    <%= f.text_area :hour_rate %>
  </p>

  <p>
    <%= f.label :tax_rate %><br>
    <%= f.text_area :tax_rate %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', jobs_path %>